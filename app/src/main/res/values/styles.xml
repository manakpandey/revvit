<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="AppBarButton">
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="TimeTableRow">
        <item name="android:textColor">#2471a3</item>
    </style>

    <style name="myButton" parent="@style/TextAppearance.MaterialComponents.Button">
        <item name="android:padding">16dp</item>
        <item name="android:elevation">8dp</item>
        <item name="android:layout_margin">12dp</item>
        <item name="android:textAllCaps">false</item>
    </style>


</resources>
