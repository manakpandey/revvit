<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/widget_row"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
            android:id="@+id/course_type_icon"
            android:contentDescription="@string/widget_row_icon_description"
            android:layout_centerVertical="true"
            android:padding="12dp"
            android:layout_alignParentStart="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:layout_toEndOf="@+id/course_type_icon"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:padding="5dp"
            android:id="@+id/title_widget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:layout_below="@+id/title_widget"
            android:layout_toEndOf="@id/course_type_icon"
            android:textColor="#F2FFFFFF"
            android:id="@+id/time_widget"
            android:textSize="15sp"
            android:padding="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:layout_toEndOf="@+id/time_widget"
            android:layout_below="@id/title_widget"
            android:textSize="15sp"
            android:textColor="#F2FFFFFF"
            android:id="@+id/venue_widget"
            android:padding="2dp"
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</RelativeLayout>